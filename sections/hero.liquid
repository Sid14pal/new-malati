<div class="custom-banner" style="background-color: {{ section.settings.background_color }};">
 {% assign banner = section.settings.banner_image %}
{% if banner %}
  <img 
    src="{{ banner | image_url: width: 1600 }}" 
    alt="Banner" 
    width="{{ banner.width }}" 
    height="{{ banner.height }}" 
    loading="lazy"
  >
{% endif %}
  <h2>{{ section.settings.heading }}</h2>
  <p>{{ section.settings.subtext }}</p>
</div>

{% schema %}
{
  "name": "Custom Banner",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "image_picker",
      "id": "banner_image",
      "label": "Banner Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Banner Heading"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Subtext",
      "default": "Banner subtext here"
    }
  ],
  "presets": [
    {
      "name": "Custom Banner"
    }
  ]
}
{% endschema %}
